<Window x:Class="TestProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Texode Test Project" 
        Height="600" Width="800" 
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top"  Height="23"/>
            <ToolBar DockPanel.Dock="Top" Height="23"/>
            <StatusBar DockPanel.Dock="Bottom" Height="23"/>

            <DataGrid Margin="0,1,0,1" ItemsSource="{Binding Students}" SelectedItem="{Binding SelectedStudent}" RowBackground="Pink" AlternatingRowBackground="LightSkyBlue">
                
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
